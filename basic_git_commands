# setup environment
git config --global user.name "[name]"
git config --global user.email "[email]"

git config --global credential.helper cache 				# set to cache user credentials
git config --global credential.helper 'cache --timeout=7200'		# set credentials timeout (seconds)

# initialize git project
git init

# view status
git status

# add file 
git add [file]

# create a commit
git commmit -m "[message for commit]"

# set up remote repository
git remote add origin https://github.com/[repo]
git remote remove origin

# pull and push from github to local and vice versa
git pull origin [branch]
git push origin [branch]

# manage branches
git branch [...]
